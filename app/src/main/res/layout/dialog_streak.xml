<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#212121"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/close"
            app:tint="#FFFFFF"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnClose"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/streak_animation_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/running"
                android:background="@drawable/circle_yellow_bg"
                android:padding="15dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Day Streak!"
                android:textColor="#FFD300"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You're crushing it!"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/streakRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:overScrollMode="never"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="CONTINUE"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#FFD300"
                app:cornerRadius="30dp"
                android:textColor="#000000"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>