<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Streak Badge (Top Right) -->
    <LinearLayout
        android:id="@+id/widgetStreakBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/widget_streak_badge"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/calories"
            app:tint="#FF9800"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/widgetStreakNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FF9800"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Refresh Button (Top Left) -->
    <ImageView
        android:id="@+id/widgetRefresh"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_refresh"
        app:tint="#FFFFFF"
        android:padding="6dp"
        android:background="?android:attr/selectableItemBackgroundBorderless" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Icon -->
        <ImageView
            android:id="@+id/widgetIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/running"
            android:background="@drawable/circle_yellow_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/widgetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's Workout! ðŸ’ª"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Message -->
        <TextView
            android:id="@+id/widgetMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start your fitness journey today!"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="20dp" />

        <!-- Action Button -->
        <TextView
            android:id="@+id/widgetButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="START WORKOUT"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/widget_button_bg"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Date Display (Bottom) -->
    <TextView
        android:id="@+id/widgetDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_marginBottom="4dp" />
</RelativeLayout>