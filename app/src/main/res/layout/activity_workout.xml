<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Background Image with Gradient Overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.6" />

        <!-- Dark gradient overlay for better text visibility -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_overlay_workout" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/transparent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <!-- Main Content Container -->
            <LinearLayout
                android:id="@+id/centerBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_centerInParent="true">

                <!-- Workout Category Badge -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#33FFD300"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WORKOUT IN PROGRESS"
                        android:textColor="#FFD300"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.1"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />
                </androidx.cardview.widget.CardView>

                <!-- Workout Title -->
                <TextView
                    android:id="@+id/workoutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workout Title"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="8"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp" />

                <!-- Timer Container with enhanced design -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#1A1A1A"
                    app:cardCornerRadius="32dp"
                    app:cardElevation="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingStart="48dp"
                        android:paddingEnd="48dp"
                        android:paddingTop="32dp"
                        android:paddingBottom="32dp">

                        <!-- Timer -->
                        <TextView
                            android:id="@+id/timerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="#FFD300"
                            android:textSize="72sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="-0.02" />

                        <!-- Time remaining label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TIME REMAINING"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.15"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Control Button with modern design -->
                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardBackgroundColor="#FFD300"
                    app:cardCornerRadius="45dp"
                    app:cardElevation="12dp"
                    android:layout_marginTop="32dp">

                    <ImageButton
                        android:id="@+id/playPauseButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/playbutton"
                        android:scaleType="centerInside"
                        android:contentDescription="Play/Pause"
                        android:padding="22dp"
                        android:tint="#000000" />
                </androidx.cardview.widget.CardView>

                <!-- Set Info with enhanced visibility -->
                <TextView
                    android:id="@+id/setInfoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Set Info"
                    android:visibility="gone"
                    android:layout_marginTop="32dp"
                    android:background="#33000000"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Top Navigation Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <!-- Back Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardBackgroundColor="#33000000"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="8dp">

                    <ImageButton
                        android:id="@+id/backFromWorkout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/arrow"
                        android:scaleType="centerInside"
                        android:contentDescription="Back"
                        android:padding="14dp"
                        android:tint="#FFFFFF" />
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Video Demo Button -->
                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardBackgroundColor="#33FFD300"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="8dp">

                    <ImageButton
                        android:id="@+id/showVideoButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:src="@drawable/youtube"
                        android:scaleType="centerInside"
                        android:contentDescription="Watch Demo"
                        android:padding="14dp"
                        android:tint="#FFD300" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Progress indicator at bottom (optional - can show workout progress) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’ª"
                    android:textSize="24sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swipe up to skip"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <!-- YouTube Modal (Full-Screen Overlay) -->
    <FrameLayout
        android:id="@+id/youtubeModal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#DD000000"
        android:clickable="true"
        android:focusable="true">

        <!-- ViewPager for YouTube Videos -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <!-- Close Button with better positioning -->
        <androidx.cardview.widget.CardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="48dp"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="#FFD300"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp">

            <ImageButton
                android:id="@+id/closeYoutubeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/close"
                android:contentDescription="Close"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:padding="16dp"
                android:tint="#000000" />
        </androidx.cardview.widget.CardView>

        <!-- Video indicator -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="32dp"
            android:text="Swipe for more videos"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#88000000"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center" />
    </FrameLayout>

</RelativeLayout>